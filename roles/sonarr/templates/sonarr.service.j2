{{ ansible_managed | comment(decoration="; ") }}
[Unit]
Description=Sonarr Daemon
After=syslog.target network.target
[Service]
User={{ sonarr_user }}
Group={{ sonarr_group }}
UMask=0002
Type=simple
ExecStart={{ sonarr_home }}/Sonarr/Sonarr -nobrowser -data={{ sonarr_data_dir }}
TimeoutStopSec=20
KillMode=process
Restart=on-failure
[Install]
WantedBy=multi-user.target